<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:padding="10dp"
    android:background="@color/WHITE"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_dianpu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/dianpu"/>
        <TextView
            android:id="@+id/tv_youhui_name"
            android:layout_toRightOf="@id/img_dianpu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2件8折，3件7折"
            android:textSize="18sp"
            android:textStyle="bold"
            android:drawableRight="@drawable/right_arrow"
            android:drawablePadding="5dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_sing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_round_redsolid"
            android:text="多买多优惠"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"/>
        <TextView
            android:id="@+id/tv_yiman"
            android:layout_toRightOf="@+id/tv_sing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:text="2件8折，3件7折"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="再逛逛"
            android:drawableRight="@drawable/joinin"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>