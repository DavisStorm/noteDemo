<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/VERYLIGHT_WHITE2">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_gouwu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/WHITE"
        android:gravity="center"
        android:elevation="10dp">

        <RelativeLayout
            android:id="@+id/rl_choose_icon"
            android:layout_width="40dp"
            android:layout_height="50dp">
            <!--<ImageView
                android:id="@+id/img_choose_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/unchosen"
                android:layout_centerInParent="true"/>-->
            <CheckBox
                android:theme="@style/My_CheckBox"
                android:id="@+id/rb_ifchooseAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="全选"
            android:textSize="18sp"
            />
        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/rl_jiesuan"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <TextView
                android:id="@+id/tv_heji"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="合计:"/>
            <TextView
                android:id="@+id/tv_heji_rmb"
                android:layout_toRightOf="@+id/tv_heji"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="¥"/>
            <TextView
                android:id="@+id/tv_heji_price_main"
                android:layout_toRightOf="@+id/tv_heji_rmb"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="0.00"/>

            <TextView
                android:id="@+id/tv_youhui"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:layout_below="@+id/tv_heji"
                android:text="优惠减:"/>
            <TextView
                android:id="@+id/tv_youhui_rmb"
                android:layout_below="@+id/tv_heji"
                android:layout_toRightOf="@+id/tv_youhui"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="¥"/>
            <TextView
                android:id="@+id/tv_youhui_price_main"
                android:layout_below="@+id/tv_heji"
                android:layout_toRightOf="@+id/tv_youhui_rmb"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="0.00"/>
            <Button
                android:id="@+id/btn_jiesuan"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="去结算"
                android:background="@drawable/btn_pressed_red"
                android:layout_alignParentRight="true"
                android:textColor="@color/WHITE"
                android:textSize="18sp"
                />
            <Button
                android:id="@+id/btn_edit"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="编辑"
                android:background="@drawable/bg_btn_round"
                android:layout_toLeftOf="@id/btn_jiesuan"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_delete"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <Button
                android:id="@+id/btn_complete"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="完成"
                android:background="@drawable/bg_btn_round"
                android:layout_toLeftOf="@id/btn_delete"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />
            <Button
                android:id="@+id/btn_delete"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="删除"
                android:background="@drawable/btn_pressed_red"
                android:layout_alignParentRight="true"
                android:textColor="@color/WHITE"
                android:textSize="18sp"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>