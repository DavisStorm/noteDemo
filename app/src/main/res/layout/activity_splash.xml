<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashActivity">

    <com.davis.particleview2.ParticleView
        android:id="@+id/pv_gs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ToolbarDark"
        pv:pv_background_color="@color/ToolbarDark"
        pv:pv_text_color="@color/WHITE"
        pv:pv_host_text="Mall"
        pv:pv_particle_text="Davis"
        pv:pv_host_text_size="30sp"
        pv:pv_particle_text_size="50sp"
        pv:pv_text_anim_time="800"
        pv:pv_spread_anim_time="800"
        pv:pv_host_text_anim_time="500" />

</androidx.constraintlayout.widget.ConstraintLayout>