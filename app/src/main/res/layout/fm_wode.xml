<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/ToolbarLight">

        <RelativeLayout
            android:id="@+id/rl_please_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <com.davis.mall.views.CircleImageView
                android:id="@+id/img_head"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/default_head"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="2dp"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_head"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="点击登录"/>
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_below="@id/rl_head"
        android:id="@+id/tv_orders"
        android:text="我的订单"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/icon_list_o"
        android:textSize="20sp"
        android:drawablePadding="20dp"
        android:padding="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/underline"
        />
    <TextView
        android:layout_below="@id/tv_orders"
        android:id="@+id/tv_shouchang"
        android:text="我的收藏"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/icon_favorite"
        android:textSize="20sp"
        android:drawablePadding="20dp"
        android:padding="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/underline"
        />
    <TextView
        android:layout_below="@id/tv_shouchang"
        android:id="@+id/tv_address"
        android:text="收货地址"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/icon_location"
        android:textSize="20sp"
        android:drawablePadding="20dp"
        android:padding="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/underline"
        />
    <Button
        android:id="@+id/btn_exit"
        android:text="退出登录"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/INDIANRED"
        android:padding="10dp"/>
</RelativeLayout>