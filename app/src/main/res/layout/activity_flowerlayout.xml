<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.davis.mall.ui.note.FlowerLayout
            android:id="@+id/flowerlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:backgroundTint="#eaf3f5"/>
        <TextView
            android:id="@+id/tv_instruction"
            android:layout_below="@+id/flowerlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义ViewGroup或者View是在Activity的onResume后执行的，具体生命周期如下"
            android:backgroundTint="@color/GREENYELLOW"/>
        <ImageView
            android:layout_below="@+id/tv_instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/view_activity_lifecycle"
            android:backgroundTint="@color/GREENYELLOW"
            android:scaleType="fitStart"/>
    </RelativeLayout>
</ScrollView>